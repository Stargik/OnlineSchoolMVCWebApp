@model OnlineSchoolMVCWebApp.Models.Cource

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
}

<h1>@ViewData["Title"]</h1>
<div>
    <h4>@Html.DisplayNameFor(model => model.Description)</h4>
    <p>@Html.DisplayFor(model => model.Description)</p>
</div>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SubjectCategory)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SubjectCategory.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Level.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CreationDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CreationDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author.FirstName) @Html.DisplayFor(model => model.Author.LastName) | @Html.DisplayFor(model => model.Author.Email)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Редагувати</a> |
    <a asp-action="Index" >Список курсів</a> |
    <a asp-controller="Tasks" asp-action="Index" asp-route-id="@Model?.Id" asp-route-title="@Model?.Title">Розпочати навчання</a>
</div>
