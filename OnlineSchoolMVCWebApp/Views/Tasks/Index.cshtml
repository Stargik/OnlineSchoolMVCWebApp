@model IEnumerable<OnlineSchoolMVCWebApp.Models.Task>

@{
    ViewData["Title"] = "Список завдань";
}

<h1>@ViewBag.CourceTitle - @ViewData["Title"]</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Читати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
    <a asp-action="Create" asp-route-courceid="@ViewBag.CourceId">Створити завдання</a>
</p>