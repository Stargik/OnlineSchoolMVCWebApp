@model IEnumerable<OnlineSchoolMVCWebApp.Models.Task>

@{
    ViewData["Title"] = "Список завдань";
}

<h1>@ViewBag.CourceTitle</h1>
<hr />
@if (Model.Count() != 0)
{
    <h4>@ViewData["Title"]</h4>
}
<table class="table">
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Редагувати</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Читати</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Видалити</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (ViewBag.Attachments is not null)
{
    <h4>@Html.DisplayNameFor(model => model.Cource.Attachments)</h4>
    <ul>
        @foreach (Attachment item in ViewBag.Attachments)
        {
            <li>
                <a href="@Html.DisplayFor(model => item.Link)" target="_blank">@Html.DisplayFor(model => item.Title)</a>
            </li>
        }
    </ul>
}
<p>
    <a asp-action="Create" asp-route-courceid="@ViewBag.CourceId">Створити завдання</a> | 
    <a asp-controller="Attachments"  asp-action="Create" asp-route-courceid="@ViewBag.CourceId">Створити додатковий матеріал</a> | 
    <a asp-controller="Attachments" asp-action="Index" asp-route-courceid="@ViewBag.CourceId">Редагувати додаткові матерали</a>
</p>