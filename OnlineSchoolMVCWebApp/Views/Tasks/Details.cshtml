@model OnlineSchoolMVCWebApp.Models.Task

@{
    ViewData["Title"] = @Html.DisplayFor(model => model.Title);
}

<h1>@ViewData["Title"]</h1>

<div>
    <hr />
    <p>@Html.DisplayFor(model => model.TaskContent)</p>
</div>
<div>
    <a asp-action="Index" class="btn btn-outline-secondary" asp-route-id="@Model?.CourceId">Список завдань</a>
    @if (User.Identity.IsAuthenticated && (User.Identity.Name == @ViewBag.CourceAuthor.Email || User.IsInRole(SettingStrings.AdminRole)))
    {
        <a asp-action="Edit" class="btn btn-outline-secondary" asp-route-id="@Model?.Id">Редагувати</a>
    }
</div>
